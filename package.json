{
  "name": "autoscientific-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Static website for autoscientific - ReachingBot for automated single pellet reaching tasks",
  "main": "index.html",
  "scripts": {
    "dev": "parcel serve index.html --port 1234 --open",
    "dev:all": "parcel serve index.html about.html thank-you.html --port 1234 --open",
    "build": "parcel build index.html about.html thank-you.html --public-url ./",
    "clean": "rm -rf dist .cache",
    "start": "npm run dev",
    "test": "echo \"No tests configured\" && exit 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint js/**/*.js",
    "lint:js:fix": "eslint js/**/*.js --fix",
    "lint:css": "stylelint css/**/*.css",
    "lint:css:fix": "stylelint css/**/*.css --fix"
  },
  "keywords": [
    "neuroscience",
    "automation",
    "preclinical",
    "laboratory",
    "reachingbot"
  ],
  "author": "autoscientific",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "parcel-bundler": "^1.12.5",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0"
  }
}
